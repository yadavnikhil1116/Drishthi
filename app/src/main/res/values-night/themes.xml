<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drishthi" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ink_base</item>
        <item name="colorPrimaryVariant">@color/ink_darker</item>
        <item name="colorOnPrimary">@color/sky_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_base</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/sky_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Screen">
        <item name="android:background">@color/sky_white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/sky_white</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/primary_base</item>
        <item name="android:textColor">@color/sky_white</item>
    </style>
</resources>
