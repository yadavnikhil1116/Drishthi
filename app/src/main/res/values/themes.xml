<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drishthi" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_base</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/sky_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ink_base</item>
        <item name="colorSecondaryVariant">@color/ink_darker</item>
        <item name="colorOnSecondary">@color/sky_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

    </style>

    <style name="Theme.Drishthi.Launcher" parent="Theme.Drishthi">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/sky_white</item>
    </style>
    
    <style name="Text">
        <item name="android:textColor">@color/ink_darkest</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/sky_white</item>
    </style>
</resources>